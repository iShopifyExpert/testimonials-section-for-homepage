<link href="//cdn.shopify.com/s/files/1/0079/1874/7711/t/10/assets/owl.carousel.min.css?v=7051608981761278196" rel="stylesheet" type="text/css" media="all">
<link href="//cdn.shopify.com/s/files/1/0079/1874/7711/t/10/assets/owl.theme.default.min.css?v=13504611835828271336" rel="stylesheet" type="text/css" media="all">
<section class="testimonials">
    <div class="container page-width">
        <div class="heading">{% if section.settings.title != blank %}
            <h1>{{ section.settings.title | escape }}</h1>{% endif %}{% if section.settings.sub_title != blank %}
            <p class="title">{{ section.settings.sub_title | escape }}</p>{% endif %}
        </div>
        <div id="testimonial" class="owl-carousel">
          {% for block in section.blocks %}
          <div class="testimonial_content_wrap">
            <div class="testimonial_content">
              <img src="{{'db_quote.png' | asset_url}}">
              <ul class="rating">
                <li><i class="fas fa-star"></i></li>
                <li><i class="fas fa-star"></i></li>
                <li><i class="fas fa-star"></i></li>
                <li><i class="fas fa-star"></i></li>
                <li><i class="fas fa-star"></i></li>
              </ul>
              <p>{{ block.settings.review }}</p>
            </div>
            <div class="client_wrap">
              <div class="client_img">
                {{ section.settings.image | img_url: 'small' | img_tag: section.settings.image.alt, 'lazyloaded' }}
              </div>
              <div class="client_detail">
                <h6>â€” {{ block.settings.name }}</h6>
                <p>{{ block.settings.location }}</p>
              </div>
            </div>
          </div>
          {% endfor %}
		</div>
	</div>
</section>

{% schema %}
  {
    "name": "Home Testimonials",
    "class": "index-sections",
    "max_blocks": 10,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Paw Ramp Reviews"
      },
      {
        "type": "textarea",
        "id": "sub_title",
        "label": "Sub Heading",
        "default": "Over 25,500 Happy Customers!"
      }
    ],
    "blocks": [
      {
        "type": "testimonials",
        "name": "Testimonials",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Customer Image"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Customer Name",
            "info": "This review By",
            "default": "Customer Name"
          },
          {
            "type": "text",
            "id": "location",
            "label": "Customer Location",
            "default": "Paw Ramp Customer"
          },
          {
            "type": "textarea",
            "id": "review",
            "label": "Customer Review",
            "default": "Love this ramp! Came sooner than the expected shipping date. Feels very sturdy. Oliver loves it too!"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Home Testimonials",
      "category": "Homepage",
      "blocks": [
        { "type": "testimonials" },
        { "type": "testimonials" },
        { "type": "testimonials" }
      ]
    }]
  }
{% endschema %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="//cdn.shopify.com/s/files/1/0079/1874/7711/t/10/assets/owl.carousel.min.js?v=9789144081155345425" defer="defer"></script>
<script>
  $(document).ready(function() {
    $("#testimonial").owlCarousel({
        loop: true,
        items: 3,
        margin: 20,
        nav: true,
        navText: ["<i class='fa fa-chevron-left'></i>", "<i class='fa fa-chevron-right'></i>"],
        responsiveClass: true,
        responsive: {
            0: {
                items: 1,
                nav: false
            },
            480: {
                items: 1,
                margin: 0,
                nav: false
            },
            769: {
                items: 2
            },
            992: {
                items: 3
            }
        }
    });
  
    $('.slider_Collection_section .owl-carousel').owlCarousel({
      loop: true,
      margin: 10,
      nav: true,
      autoplay: true,
      autoplayHoverPause: true,
      responsive: {
        0: {
          items: 1
        },
        600: {
          items: 3
        },
        1000: {
          items: 5
        }
      }
    });
  	
  	$(window).on('load', function(){
        var acountry = localStorage.getItem('pawramp_ccode');
        if (acountry !== 'US') {
           $(".product-form__item--payment-button").addClass("notUScountry");
            $(".bold_hidden").css("display", "block!important;");
            $(".bold_clone").css("display", "none!important;");
        }
    });  
 
});
</script>
